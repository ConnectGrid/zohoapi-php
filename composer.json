{
    "name": "connectgrid/zohoapi-sdk",
    "type": "library",
    "description": "Zoho API v2 SDK",
    "keywords": [
        "connectgrid",
        "zohoapi-sdk"
    ],
    "homepage": "https://github.com/connectgrid/zohoapi-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Connect Grid Ltd",
            "email": "webmaster@connectgrid.ca",
            "homepage": "https://www.connectgrid.ca/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "connectgrid\\zohoapi-sdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "connectgrid\\zohoapi-sdk\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
